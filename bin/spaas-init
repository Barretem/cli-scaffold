#!/usr/bin/env node

const program = require('commander')

const Module = require('../dist/init/module').default
const Project = require('../dist/init/project').default;
const Init = require('../dist/init/index').default;

program
  .option('-N --name [name]', '项目名称')
  .option('-V --version [version]', '版本号')
  .option('-D --description [description]', '项目介绍')
  .parse(process.argv)

const args = program.args
const { description, name, version } = program

// 判断是初始化模块项目还是完整项目
// 1. 模块项目
// 2. 完整项目
const type = args[0];
// 1. 模块项目
const ifModule = type === 'childApp';
// 2. 完整项目
const ifProject = type === 'project';

if(ifModule) {
  const moduleName = args[1] || name;

  const module = new Module({
    projectName: moduleName,
    description,
    version
  });

  module.create();
} else if(ifProject) {
  // 2. 完整项目
  const projectName = args[1] || name;

  const project = new Project({
    projectName,
    description,
    version
  });

  project.create();
} else {
  const initProgram = new Init({
    projectName: name,
    description,
    version
  });
  initProgram.init();
}
